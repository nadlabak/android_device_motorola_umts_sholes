<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:title="@string/select_configuration_title">
	<PreferenceScreen android:title="@string/headset_title">
		<intent android:action="com.bel.android.dspmanager.HEADSET" />
	</PreferenceScreen>
	<PreferenceScreen android:title="@string/speaker_title">
		<intent android:action="com.bel.android.dspmanager.SPEAKER" />
	</PreferenceScreen>
	<PreferenceScreen android:title="@string/bluetooth_title">
		<intent android:action="com.bel.android.dspmanager.BLUETOOTH" />
	</PreferenceScreen>
	<PreferenceScreen android:title="@string/audio_effects">
		<intent android:action="android.intent.action.MAIN"
		android:targetPackage="com.motorola.android.AudioEffectSettings"
		android:targetClass="com.motorola.android.AudioEffectSettings.DeviceListActivity" />
	</PreferenceScreen>
	<PreferenceCategory android:title="@string/global_opt_title">
		<CheckBoxPreference android:key="dsp.compression.allow"
			android:title="@string/pref_compression_allow_title"
			android:summary="@string/pref_compression_allow_summary">
		</CheckBoxPreference>
	</PreferenceCategory>
</PreferenceScreen>
